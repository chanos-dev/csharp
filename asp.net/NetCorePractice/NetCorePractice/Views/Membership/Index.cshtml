
@{
    ViewData["Title"] = "멤버쉽";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int num = 10;
}

<h1>@ViewData["Title"]</h1>

<div class="text-info">@TempData["Message"]</div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/star.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/tree.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/star.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />



@foreach (var i in Enumerable.Range(0, num))
{
    var v = i + num;
    var v2 = v + num;

    <div class="container">
        <div class="row">
            <div class="col-md 4">
                <div class="card" style="width: 18rem;">
                    <img src="/images/star.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Card title @i</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="https://www.naver.com" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            <div class="col-md 4">
                <div class="card" style="width: 18rem;">
                    <img src="/images/tree.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Card title @v</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="https://github.com/chanos-dev" class="btn btn-danger">Go somewhere</a>
                    </div>
                </div>
            </div>
            <div class="col-md 4">
                <div class="card" style="width: 18rem;">
                    <img src="/images/star.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Card title @v2</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="https://chanos-dev.github.io/" class="btn btn-success">Go somewhere</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
} 